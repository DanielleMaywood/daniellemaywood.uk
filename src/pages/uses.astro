---
import { Icon } from "astro-icon/components";
import BaseLayout from "../layouts/BaseLayout.astro";

const hardware = [
  {
    icon: "apple",
    name: "iPhone 12",
    desc: "Personal phone",
  },
  {
    icon: "apple",
    name: `14" M3 MacBook Pro`,
    desc: "Personal laptop",
  },
  {
    icon: "apple",
    name: `14" M3 MacBook Pro`,
    desc: "Work laptop",
  },
  {
    icon: "raspberrypi",
    name: "Raspberry Pi 5",
    desc: "Home server",
  },
  {
    icon: "elgato",
    name: "Elgato Wave Neo",
    desc: "Microphone",
  },
  {
    icon: "audiotechnica",
    name: "Audio-Technica ATH-M40x",
    desc: "Headphones",
  },
];

const software = [
  {
    icon: "apple",
    name: "Apple's Mail.app",
    desc: "Mail client",
  },
  {
    icon: "github",
    name: "Ghostty",
    desc: "Terminal emulator",
  },
  {
    icon: "zedindustries",
    name: "Zed",
    desc: "Code editor",
  },
  {
    icon: "1password",
    name: "1Password",
    desc: "Password manager",
  },
];

const cloud = [
  {
    icon: "cloudflare",
    name: "Cloudflare",
    desc: "Static site hosting",
  },
  {
    icon: "porkbun",
    name: "Porkbun",
    desc: "Domain registrar",
  },
  {
    icon: "migadu",
    name: "Migadu",
    desc: "Mail server",
  },
];
---

<BaseLayout title="Uses" style="--flow-space: var(--space-m)">
  <h2>What I use...</h2>

  <figure class="flow" style="--flow-space: var(--space-s)">
    <figcaption>
      <h3 class="cluster" style="--gutter: var(--space-2xs)">
        <Icon aria-hidden name="ph:laptop" />
        Hardware
      </h3>
    </figcaption>

    <ul class="flow" style="--flow-space: var(--space-2xs)">
      {
        hardware.map((item) => (
          <li class="card repel">
            <p class="cluster" style="--gutter: var(--space-2xs)">
              <Icon aria-hidden name={item.icon} />
              <strong>{item.name}</strong>
            </p>
            <p>{item.desc}</p>
          </li>
        ))
      }
    </ul>
  </figure>

  <figure class="flow" style="--flow-space: var(--space-s)">
    <figcaption>
      <h3 class="cluster" style="--gutter: var(--space-2xs)">
        <Icon aria-hidden name="ph:app-window" />
        Software
      </h3>
    </figcaption>

    <ul class="flow" style="--flow-space: var(--space-2xs)">
      {
        software.map((item) => (
          <li class="card repel">
            <p class="cluster" style="--gutter: var(--space-2xs)">
              <Icon aria-hidden name={item.icon} />
              <strong>{item.name}</strong>
            </p>
            <p>{item.desc}</p>
          </li>
        ))
      }
    </ul>
  </figure>

  <figure class="flow" style="--flow-space: var(--space-s)">
    <figcaption>
      <h3 class="cluster" style="--gutter: var(--space-2xs)">
        <Icon aria-hidden name="ph:cloud" />
        Cloud
      </h3>
    </figcaption>

    <ul class="flow" style="--flow-space: var(--space-2xs)">
      {
        cloud.map((item) => (
          <li class="card repel">
            <p class="cluster" style="--gutter: var(--space-2xs)">
              <Icon name={item.icon} />
              <strong>{item.name}</strong>
            </p>
            <p>{item.desc}</p>
          </li>
        ))
      }
    </ul>
  </figure>
</BaseLayout>
