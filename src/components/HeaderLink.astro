---
interface Props {
  href: string;
}

const { pathname } = Astro.url;
const { href } = Astro.props;
---

<a
  class:list={[
    "text-xl font-semibold decoration-trans-blue dark:decoration-trans-pink decoration-4 dark:decoration-2 underline-offset-8",
    { underline: pathname === href },
  ]}
  href={href}
  data-astro-prefetch
>
  <slot />
</a>
