---
interface Props {
  href: string;
}

const { pathname } = Astro.url;
const { href } = Astro.props;
---

<a
  class:list={[
    "font-semibold text-xl underline underline-offset-2 decoration-2 hover:text-ctp-red",
    {
      "text-ctp-pink": pathname === href,
    },
  ]}
  href={href}
>
  <slot />
</a>
