---
import HeaderLink from "./HeaderLink.astro";

const links = [
  {
    href: "/",
    name: "Home",
  },
  {
    href: "/contact/",
    name: "Contact",
  },
  {
    href: "/blog/",
    name: "Blog",
  },
];
---

<header class="mx-2 my-4 pt-4">
  <nav>
    <ul class="flex flex-row justify-center gap-4 md:justify-start">
      {
        links.map(({ href, name }) => (
          <li>
            <HeaderLink href={href}>{name}</HeaderLink>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
