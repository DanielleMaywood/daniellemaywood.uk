---
import { Image, getImage } from "astro:assets";

import Header from "../components/Header.astro";
import avatar from "../images/avatar.png";

import "../styles/main.css";

interface Props {
  title: string;
}

const favicon = await getImage({
  src: avatar,
  width: 60,
  height: 60,
  format: "webp",
});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href={favicon.src} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title}</title>
  </head>
  <body class="bg-fuchsia-50 dark:bg-neutral-900 dark:text-fuchsia-50 max-w-4xl p-4 mx-auto">
    <Header />

    <main class="mt-4 md:mt-16">
      <div class="flex justify-between gap-8">
        <div><slot /></div>

        <div class="min-w-fit">
          <Image
            class="hidden md:block border border-4 border-black rounded-full"
            src={avatar}
            width="150"
            height="150"
            alt="Profile picture"
          />
        </div>
      </div>
    </main>
  </body>
</html>
