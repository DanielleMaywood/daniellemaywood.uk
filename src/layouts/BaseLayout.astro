---
import Header from "@components/Header.astro";

interface Props {
  title: string;
  subtitle?: string;
}

const { title = "Danielle Maywood", subtitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="text-ctp-text ctp-latte dark:ctp-mocha bg-ctp-base container mx-auto"
  >
    <Header />

    <main class="px-6 py-4">
      <h1 class="text-4xl font-bold">{title}</h1>
      {subtitle && <h2 class="text-lg italic">{subtitle}</h2>}

      <slot />
    </main>
  </body>
</html>
