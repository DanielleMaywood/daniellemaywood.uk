---
import Doodles from "../components/Doodles.astro";
import StickyNote from "../components/StickyNote.astro";

import "@fontsource/indie-flower";
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>{title}</title>
    </head>
    <body
        class="bg-neutral-50 bg-size-[20px_20px] bg-grid font-crayon min-h-screen flex flex-col"
    >
        <Doodles />

        <header class="border-b border-dashed border-gray-400 bg-white/80">
            <div
                class="max-w-[120ch] mx-auto p-4 flex flex-col md:flex-row items-center justify-between"
            >
                <a href="/" class="text-3xl">danielle's blog</a>

                <nav class="flex flex-wrap text-lg gap-x-4 gap-y-2">
                    <a
                        href="/"
                        class="inline-block -rotate-2 hover:rotate-1 px-2 py-1 bg-blue-50 hover:bg-blue-100 transition-colors text-blue-950 rounded-lg border border-blue-200"
                    >
                        home
                    </a>

                    <a
                        href="/uses"
                        class="inline-block rotate-1 hover:-rotate-1 px-2 py-1 bg-purple-50 hover:bg-purple-100 transition-colors text-purple-950 rounded-lg border border-purple-200"
                    >
                        my stuff
                    </a>

                    <!-- <a
                        href="/"
                        class="inline-block -rotate-1 hover:rotate-2 px-2 py-1 bg-rose-50 hover:bg-rose-100 transition-colors text-rose-950 rounded-lg border border-rose-200"
                    >
                        stuff i wrote
                    </a> -->

                    <a
                        href="/contact"
                        class="inline-block rotate-2 hover:-rotate-2 px-2 py-1 bg-green-50 hover:bg-green-100 transition-colors text-green-800 rounded-lg border border-green-200"
                    >
                        say hi!
                    </a>
                </nav>
            </div>
        </header>

        <main class="flex-1 container mx-auto px-4 py-8">
            <div class="max-w-[85ch] w-full mx-auto">
                <slot />
            </div>
        </main>

        <footer
            class="border-t border-dashed border-gray-400 bg-white/80 p-4 mt-auto"
        >
            <StickyNote class="bg-pink-50 -rotate-1">
                <div
                    class="flex items-center justify-center gap-2 font-crayon text-neutral-950"
                >
                    <a
                        href="https://webring.club/3vsszlhWJcXKoD4M/previous"
                        class="text-purple-800 hover:text-purple-800 text-lg"
                    >
                        ←
                    </a>
                    <span class="text-base">Constellation Webring</span>
                    <a
                        href="https://webring.club/3vsszlhWJcXKoD4M/next"
                        class="text-purple-800 hover:text-purple-800 text-lg"
                    >
                        →
                    </a>
                </div>
            </StickyNote>
        </footer>
    </body>
</html>
